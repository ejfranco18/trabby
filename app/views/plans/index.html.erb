<h3 class="mt-3 center mb-3 title-card">Your Travel Plans</h3>
<div class="container-plan mb-5">

  <% @plans.each do |plan|%>
    <%# image = plan.city.image %>
    <div class="card-trip">
      <!-- <div class="banner_top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%#= image %>)"> -->
      <%= link_to plan_path(plan.id) do %>
        <div class="plan-banner d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plan.city.image ? plan.city.image : 'https://images.unsplash.com/Ys-DBJeX0nE.JPG?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80'%>)">
          <h2 id="city-name"><%= plan.city.name %></h2>
        </div>
        <!-- <img src="<%#= plan.city.image %>" /> -->
      <% end %>
      <div class="card-trip-infos">
        <div>
          <p><span>From:</span> <%= plan.start_date.strftime("%d of %B") %> <br><span>To:</span> <%= plan.end_date.strftime("%d of %B") %></p>
          <p id="days"><%= (plan.end_date - plan.start_date).to_i + 1 %> Days</p>
        </div>
        <div class="buttons-card mt-2">
          <% plan.category_ids.each_with_index do |catID, i| %>
            <p class="pr-2 mr-2<%= i < plan.category_ids.count - 1 ? " borders" : ""  %>"><%=  "#{Category.find(catID).name}"  %> </p>

          <% end %>
        </div>


          <button class="mt-3" id="delete-btn"><%= link_to 'Remove', plan_path(plan), method: :delete %></button>




        <!-- <div>
          <a href="" target="_blank"><button class="button_class mr-2" id="white" ><%#= City.find(plan.city_id).name %></button></a>
        </div> -->
        <!-- <h2 class="card-trip-pricing">Â£99.99</h2> -->
        <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
      </div>
    </div>
  <% end %>
</div>

