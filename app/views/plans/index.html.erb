<div class="container mb-5">
  <h1>All my plans are here</h1>
  <% Plan.where(user_id: @user.id).each do |plan|%>
    <% image =  %>
    <div class="card-trip">
      <!-- <div class="banner_top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%#= plan.city.image %>)"> -->
      <img src="<%= plan.city.image %>" />
      <div class="card-trip-infos">
        <div>
          <h2>From: <%= plan.start_date.strftime("%d of %B") %> to <%= plan.end_date.strftime("%d of %B") %></h2>
          <p><%= (plan.end_date - plan.start_date).to_i + 1 %> Days</p>
        </div>
        <div>
          <a href="" target="_blank"><button class="button_class mt-2 mr-2" id="white" ><%= City.find(plan.city_id).name %></button></a>
        </div>
        <!-- <h2 class="card-trip-pricing">Â£99.99</h2> -->
        <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
      </div>
    </div>
  <% end %>
</div>

