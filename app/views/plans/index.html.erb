<h1>Foursquare place</h1>
<ul>
<% @places.each do |place| %>

  <li><%= place["name"] %>
  <p>Latitude: <%= place["location"]["lat"] %></p>
  <p>Longitude: <%= place["location"]["lng"] %></p>
  <p><%= "#{place["location"]["city"]} - #{place["location"]['country']}" %></p>
  <%= link_to "Link", plan_path(place["id"]) %>
  </li>
<% end %>
</ul>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
