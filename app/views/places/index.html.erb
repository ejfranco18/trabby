<h1>Foursquare place</h1>
<ul>
<% @places.each do |place| %>

  <li><%= place["venue"]["name"] %>
  <p>Latitude: <%= place["venue"]["location"]["lat"] %></p>
  <p>Longitude: <%= place["venue"]["location"]["lng"] %></p>
  <p><%= "#{place["venue"]["location"]["city"]} - #{place["venue"]["location"]['country']}" %></p>
  <p>Category: <%= place["venue"]["categories"].first["shortName"] %></p>
  <%= link_to "Link", plan_path(place["venue"]["id"]) %>
  </li>
<% end %>
</ul>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

