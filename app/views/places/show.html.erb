<div class="container">
<h3 div class="title1"><%= @place["name"] %></h3>
<div class="place_info_wrapper">
  <div class="place_main_info">

   <p><span class="title" >Address: </span><%= @place[:venue]["location"]["address"] %></p>
    <p><span class="title">Phone: </span><%= @place[:venue]["contact"]["phone"] %></p>
    <p><span class="title">Rating: </span><%= @place[:venue]["rating"]%></p>
    <p><span class="title">Url: </span><a href="<%= @place[:venue]['url']%>"><%= @place[:venue]["url"]%></a></p>
    <p><span class="title">Categories: </span>
      <ul>
      <% @place[:venue]["categories"].each do |categorie| %>
       <li><%= categorie["shortName"] %></li>
      <% end %>
      </ul>
       <% if @place[:venue]["description"] %>
    <p><%= @place[:venue]["description"] %></p>
  <% end %>
    </p>
  </div>
  <div class="place_side_info">
    <%= image_tag smart_image(@place) %>
  </div>
</div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

